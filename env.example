# Database
POSTGRES_USER=leaduser
POSTGRES_PASSWORD=leadpass
POSTGRES_DB=leadplatform
DATABASE_URL=postgresql+asyncpg://leaduser:leadpass@localhost:5432/leadplatform

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-for-fernet-min-32-chars

# Admin User (created automatically by migration)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin@123

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Email SMTP (Free - using Gmail or any SMTP server)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=admin@example.com

# Meta (Facebook/Instagram)
META_APP_SECRET=your-meta-app-secret
META_APP_ID=your-meta-app-id
META_VERIFY_TOKEN=your-meta-verify-token

# Google Sheets (Optional - only if using Google Sheets integration)
# Download service account JSON from Google Cloud Console
# See SETUP.md for detailed instructions
GOOGLE_SERVICE_ACCOUNT_FILE=./service_account.json

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth_service:8001
CLIENT_SERVICE_URL=http://client_service:8002
USER_SERVICE_URL=http://user_service:8003
LEAD_SERVICE_URL=http://lead_service:8004
PRODUCT_SERVICE_URL=http://product_service:8005
INTEGRATION_SERVICE_URL=http://integration_service:8006
WEBHOOK_SERVICE_URL=http://webhook_service:8007

# Rate Limiting (Anti-Spam)
RATE_LIMIT_PER_IP=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_PER_API_KEY=50
LEAD_DUPLICATE_COOLDOWN_SECONDS=300

